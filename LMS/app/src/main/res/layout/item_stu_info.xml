<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".timetable.TimeTableDetailActivity"
    android:orientation="vertical">





    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="학번"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/shape_cell_detail"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/id"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:text="10112"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/shape_cell_detail"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/name"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="김강윤"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="성별"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/shape_cell_detail"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/gender"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="남/녀"
                    android:background="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="학년"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/shape_cell_detail"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/grade"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="강의명"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_cell_detail"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="학과"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/department"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="강의번호내용"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="5dp"
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="전화번호"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="@drawable/shape_cell_detail"
                    android:textColor="#000"
                    />
                <TextView
                    android:id="@+id/phone"
                    android:padding="5dp"
                    android:layout_weight="6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="010-0000-0000"
                    android:textSize="12dp"
                    />
            </LinearLayout>
        </LinearLayout>




    </LinearLayout>


</LinearLayout>