<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".notice.NoticeDetailActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">





    <RelativeLayout
        android:id="@+id/board_reative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/activity_board_detail"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#123"
            app:cardCornerRadius="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:fontFamily="@font/welcomr"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/txtwhite"
                android:text="자유게시판"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_below="@+id/activity_board_detail"
            android:id="@+id/board_table"
            android:layout_width="match_parent"
            android:layout_height="600dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/txtwhite"
                    android:background="@color/navy"
                    android:text="제목"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="제목"
                    android:padding="10dp"
                    android:id="@+id/board_detail_title"
                    />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="@color/navy"
                    android:textColor="@color/txtwhite"
                    android:text="작성자"/>

                <TextView
                    android:id="@+id/board_detail_writer"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="작성자"

                    />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/txtwhite"
                    android:background="@color/navy"
                    android:text="조회수"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="조회수"
                    android:id="@+id/board_detail_readcnt"
                    android:padding="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center"
                    android:textColor="@color/txtwhite"
                    android:background="@color/navy"
                    android:text="작성일자"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/board_detail_writedate"
                    android:text="작성일자"
                    android:padding="10dp"

                    />
            </LinearLayout>



            <LinearLayout
                android:layout_height="440dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/txtwhite"
                    android:padding="10dp"
                    android:gravity="center"
                    android:background="@color/navy"
                    android:text="내용"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:gravity="left"
                    android:id="@+id/board_detail_content"
                    android:text="내용"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/txtwhite"
                    android:gravity="center"
                    android:background="@color/navy"
                    android:text="첨부파일"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/board_detail_filename"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:src="@drawable/book2"
                    android:id="@+id/board_detail_filepath"
                    android:layout_gravity="center"

                    />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/board_table"
            android:gravity="center"
            android:id="@+id/board_btn_lin"
            >

            <Button
                android:layout_margin="10dp"
                android:id="@+id/board_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/navy"
                android:text="목록"/>
            <Button
                android:layout_margin="10dp"
                android:id="@+id/board_modify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lmsdark"
                android:text="수정"/>
            <Button
                android:backgroundTint="#851A1A"
                android:layout_margin="10dp"
                android:id="@+id/board_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="삭제"/>






        </LinearLayout>

        <LinearLayout
            android:id="@+id/comment_linea"
            android:layout_below="@+id/board_btn_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="댓글"
                android:textSize="30dp"/>

            <FrameLayout
                android:id="@+id/comment_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/comment_linea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="50dp"
            >

            <EditText
                android:id="@+id/comment_et"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:background="#eeeeee"
                android:layout_weight="1"
                android:hint="댓글 내용을 입력하세요"/>
            <Button
                android:id="@+id/reg_button"
                android:backgroundTint="@color/navy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:layout_marginLeft="5dp"
                android:text="등록하기"/>
        </LinearLayout>




    </RelativeLayout>



    </FrameLayout>


</ScrollView>